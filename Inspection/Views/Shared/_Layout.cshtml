<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <title>@ViewBag.Title - Health And Safety Inspection</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    @Styles.Render("~/Content/css-bootstrap")
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.5.1/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.0/css/responsive.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prettyPhoto/3.1.6/css/prettyPhoto.min.css" />
    @Styles.Render("~/Content/css-site")


    @Scripts.Render("~/bundles/scripts-bootstrap")
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prettyPhoto/3.1.6/js/jquery.prettyPhoto.min.js"></script>
    @Scripts.Render("~/bundles/scripts-site")


</head>
<body>
    <!-- Layer Page -->
    <div class="layer-page">

        <!-- Layer Header -->
        <div class="layer-header">
            <div class="container-fluid">
                <div class="row">

                    <!-- Layer Logo -->
                    <div class="col-sm-3 col-md-2 layer-logo">
                        <p class="panel-logo">@Html.ActionLink(" ", "Index", "Home")</p>
                    </div>
                    <!-- End Logo -->
                    <!-- Top Header -->
                    <div class="col-sm-9 col-md-10 top-header">
                        <div class="layer-breadcrumbs">
                            <p class="panel-breadcrumbs">Health &amp; Safety Inspection Dashboard</p>
                        </div>
                        <nav class="nav-main">
                            @Html.Partial("_LoginPartial")
                        </nav>
                        <p class="panel-menubutton"><a href="javascript:void(0)" class="link-menu" title="Toggle Menu"><span></span></a></p>

                        <div class="clearfix"></div>
                    </div>
                    <!-- End Top Header -->

                </div>
            </div>
        </div>
        <!-- END Layer Header -->
        <!-- Layer Body -->
        <div class="layer-body">
            <div class="container-fluid">

                @RenderBody()

            </div>

        </div>
        <!-- END Layer Body -->
        <!-- Layer Footer -->
        <div class="layer-footer">

        </div>
        <!-- END Layer Footer -->

    </div>
    <!-- END Layer Page -->

    <p class="panel-gototop"><a href="javascript:void(0)" title="Go to top" onClick="goToTop()"><i class="fas fa-arrow-up"></i></a></p>

    <div class="layer-overlay"></div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)*@
</body>
</html>
